<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elashry.aseer.Activities.Home"
    >

    <com.szugyi.circlemenu.view.CircleLayout
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:isRotating="false"
        app:radius="110dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icon"
            android:id="@+id/apsent"
            android:src="@drawable/eicon10"
            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icon"
            android:id="@+id/homework"
            android:src="@drawable/icon2"
            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icon"
            android:id="@+id/activity"
            android:src="@drawable/eicon3"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icon"
            android:id="@+id/news"
            android:src="@drawable/eicon4"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icon"
            android:id="@+id/table"
            android:src="@drawable/eicon5"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icone"
            android:id="@+id/arrive"
            android:src="@drawable/icon6"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icone"
            android:id="@+id/sharf"
            android:src="@drawable/eicon7"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icone"
            android:id="@+id/rsoom"
            android:src="@drawable/eicon8"

            />

        <com.szugyi.circlemenu.view.CircleImageView
            style="@style/icone"
            android:id="@+id/state"
            android:src="@drawable/eicon9"

            />

    </com.szugyi.circlemenu.view.CircleLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/not_container"
>

        <ImageView
            android:layout_height="70dp"
            android:id="@+id/btn_out"
            android:layout_width="70dp"
            android:src="@drawable/out"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/background_color"
            android:text="@string/out"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/not_container"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_height="70dp"
            android:id="@+id/btn_copy"
            android:layout_width="70dp"
            android:src="@drawable/co"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/background_color"
            android:text="@string/about"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/not_container"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:visibility="visible"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/not"
                android:id="@+id/notfy"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/total"
                android:id="@+id/pay"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/notf_txt"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom|right"
                android:background="@color/back"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/background_color"
                android:textSize="8sp"
                />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/rs"
            android:textColor="@color/background_color"
            android:text="@string/rsoom"/></LinearLayout>
    <!--<ImageView-->
    <!--android:layout_width="45dp"-->
    <!--android:layout_height="45dp"-->
    <!--app:srcCompat="@drawable/mss"-->
    <!--android:layout_marginLeft="180dp"-->
    <!--android:layout_marginTop="130dp"-->
    <!--android:id="@+id/imageView"-->
    <!--/>-->

</RelativeLayout>
