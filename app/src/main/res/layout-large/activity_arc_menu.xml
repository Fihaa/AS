<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/splach"
    >

    <TextView
        android:textStyle="normal"
        android:id="@+id/title1"
        android:layout_marginBottom="20dp"
        android:textColor="#009688"
        android:textSize="25dp"
        android:text="Select Your School "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcmenu_android_example_layout"
        android:layout_width="256px"
        android:layout_height="256px"
        app:menu_scr="@drawable/girl"
        app:menu_open="arc_right"
        app:menu_radius="200dp"
        app:menu_color="#f5f9f8"


        >

        <ImageView
            android:id="@+id/fab_arc_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item11"
            />

        <ImageView
            android:id="@+id/fab_arc_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item22"/>

        <ImageView
            android:id="@+id/fab_arc_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item33"

            />



    </com.sa90.materialarcmenu.ArcMenu>

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcmenu_android_example_layout2"
        android:layout_width="256px"
        android:layout_height="256px"
        app:menu_scr="@drawable/boy"
        app:menu_open="arc_right"
        app:menu_radius="200dp"
        app:menu_color="#f5f9f8"


        >

        <ImageView
            android:id="@+id/fab_arc_menu_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item1"
            />

        <ImageView
            android:id="@+id/fab_arc_menu_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item2"/>

        <ImageView
            android:id="@+id/fab_arc_menu_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item3"
            />



    </com.sa90.materialarcmenu.ArcMenu>

</LinearLayout>